    <bioghist id="aspace_hzc210880n545as74688209033853">
      <head>Biographical / Historical</head>
      <p>Thom Sudato is a painter active in Chicago, Illinois.</p>
    </bioghist>
    <arrangement id="aspace_9b89d203830978466bf8bc9c680355a7">
