               <did>
                  <unittitle>Page 112, 
				  <unitdate>Dec. 5, 1908</unitdate>
				
                  </unittitle>
               </did>
               <scopecontent>
                  <p>100th anniversary.</p>
               </scopecontent>
            </c02>
            <c02 level="item">
               <did>
                  <unittitle>Page 112, 
